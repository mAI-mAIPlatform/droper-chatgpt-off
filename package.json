{
  "name": "fortnite-clone",
  "version": "1.0.0",
  "description": "Mini Fortnite solo vs bots",
  "main": "src/main.js",

  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win"
  },

  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },

  "build": {
    "appId": "com.mathias.fortniteclone",
    "productName": "FortniteClone",
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    }
  }
}